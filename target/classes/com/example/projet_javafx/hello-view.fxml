<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projet_javafx.MainController"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Section: Title and Financial Info -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="WomenShop - Stock Management System" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <HBox spacing="30" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Current Capital:" textFill="white" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblCapital" text="€0.00" textFill="#2ecc71" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Total Income:" textFill="white" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblIncome" text="€0.00" textFill="#3498db" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Total Cost:" textFill="white" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblCost" text="€0.00" textFill="#e74c3c" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Product Table -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <!-- Filters and Controls -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filter by Category:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="categoryFilter" prefWidth="150"/>

                <Label text="Sort by Price:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="sortOrder" prefWidth="180"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Add Product" onAction="#handleAddProduct"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>

                <Button text="Apply Discount" onAction="#handleApplyDiscount"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>

                <Button text="Stop Discount" onAction="#handleStopDiscount"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
            </HBox>

            <!-- Product Table -->
            <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colName" text="Product Name" prefWidth="150"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="colPurchasePrice" text="Purchase Price" prefWidth="120"/>
                    <TableColumn fx:id="colSellingPrice" text="Selling Price" prefWidth="120"/>
                    <TableColumn fx:id="colFinalPrice" text="Final Price" prefWidth="120"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    <TableColumn fx:id="colDiscount" text="Discount" prefWidth="100"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="260"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;" alignment="CENTER_LEFT">
            <Label text="Ready" textFill="white" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>