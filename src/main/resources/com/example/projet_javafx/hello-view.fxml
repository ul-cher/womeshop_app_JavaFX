                    <Label text="Your Complete Fashion Store Management Solution"
                           textFill="#f0f0f0" style="-fx-font-size: 14px;"/>
                </VBox>

                <Button text="ðŸ’° Financial Report"
                        style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 20; -fx-cursor: hand;"/>
            </HBox>

            <!-- Financial Dashboard Cards -->
            <HBox spacing="20" alignment="CENTER"
                  style="-fx-padding: 20; -fx-background-color: white;">

                <!-- Current Capital Card -->
                <VBox spacing="8" alignment="CENTER"
                      style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);"
                      HBox.hgrow="ALWAYS">
                    <Label text="ðŸ’µ Current Capital" textFill="white" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblCapital" text="â‚¬10,000.00" textFill="white"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Available Balance" textFill="#e0e0e0" style="-fx-font-size: 11px;"/>
                </VBox>

                <!-- Total Income Card -->
                <VBox spacing="8" alignment="CENTER"
                      style="-fx-background-color: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);"
                      HBox.hgrow="ALWAYS">
                    <Label text="ðŸ“ˆ Total Income" textFill="white" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblIncome" text="â‚¬0.00" textFill="white"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="From Sales" textFill="#e0e0e0" style="-fx-font-size: 11px;"/>
                </VBox>

                <!-- Total Cost Card -->
                <VBox spacing="8" alignment="CENTER"
                      style="-fx-background-color: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);"
                      HBox.hgrow="ALWAYS">
                    <Label text="ðŸ“‰ Total Cost" textFill="white" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblCost" text="â‚¬0.00" textFill="white"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="From Purchases" textFill="#e0e0e0" style="-fx-font-size: 11px;"/>
                </VBox>

                <!-- Profit Card -->
                <VBox spacing="8" alignment="CENTER"
                      style="-fx-background-color: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);"
                      HBox.hgrow="ALWAYS">
                    <Label text="ðŸ’Ž Net Profit" textFill="white" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblProfit" text="â‚¬0.00" textFill="white"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="Income - Cost" textFill="#e0e0e0" style="-fx-font-size: 11px;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Product Management -->
    <center>
        <VBox spacing="20" style="-fx-padding: 25;">

            <!-- Control Panel -->
            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <!-- Filter Section -->
                <VBox spacing="5">
                    <Label text="ðŸ·ï¸ Category Filter" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <ComboBox fx:id="categoryFilter" prefWidth="150"
