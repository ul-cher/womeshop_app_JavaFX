                </VBox>

                <!-- Sort Section -->
                <VBox spacing="5">
                    <Label text="ðŸ”„ Sort Products" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <ComboBox fx:id="sortOrder" prefWidth="180"
                              style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
                </VBox>

                <!-- Search Box -->
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ” Search Products" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <TextField fx:id="searchField" promptText="Search by name..."
                               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8;"/>
                </VBox>

                <!-- Action Buttons -->
                <VBox spacing="10" alignment="CENTER_RIGHT">
                    <HBox spacing="10">
                        <Button text="âž• Add Product" onAction="#handleAddProduct"
                                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 13px;"/>

                        <Button text="ðŸŽ‰ Apply Discount" onAction="#handleApplyDiscount"
                                style="-fx-background-color: #38ef7d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 13px;"/>

                        <Button text="â›” Stop Discount" onAction="#handleStopDiscount"
                                style="-fx-background-color: #ff6a00; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 13px;"/>
                    </HBox>
                </VBox>
            </HBox>

            <!-- Products Table -->
            <VBox VBox.vgrow="ALWAYS" spacing="10"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“¦ Product Inventory"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTotalProducts" text="Total: 0 products"
                           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                </HBox>

                <TableView fx:id="productTable" VBox.vgrow="ALWAYS"
                           style="-fx-background-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colName" text="Product Name" prefWidth="180"/>
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
                        <TableColumn fx:id="colDetails" text="Details" prefWidth="150"/>
                        <TableColumn fx:id="colPurchasePrice" text="Purchase â‚¬" prefWidth="100"/>
                        <TableColumn fx:id="colSellingPrice" text="Selling â‚¬" prefWidth="100"/>
                        <TableColumn fx:id="colFinalPrice" text="Final â‚¬" prefWidth="100"/>
                        <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                        <TableColumn fx:id="colDiscount" text="Discount" prefWidth="100"/>
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="300"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom: Modern Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: #2c3e50; -fx-padding: 12;">
            <Label text="âœ… System Ready" textFill="#2ecc71"
                   style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblLastUpdate" text="Last updated: Just now"
                   textFill="#95a5a6" style="-fx-font-size: 11px;"/>
            <Label text="WomenShop v1.0" textFill="#95a5a6"
                   style="-fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>